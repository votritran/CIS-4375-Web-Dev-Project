<style>
.navbar ul li {
    position: relative; /* Add this line */
}

.account-dropdown .dropbnt {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
}

.account-icon-img {
    height: auto;
    width: 45px;
    position: absolute;
    top: -10px;
}

.account-dropdown .dropdown-content {
    display: none; /* Initially hidden */
    position: absolute;
    background-color: #f9f9f9;
    min-width: 130px;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    right: -40px;
    top: 35px;
    text-align: center;
}

.account-dropdown .dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.account-dropdown .dropdown-content a:hover {
    background-color: #f1f1f1;
}


</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const dropdownButton = document.getElementById('accountDropdownButton');
    const dropdownContent = document.getElementById('accountDropdownContent');

    dropdownButton.addEventListener('click', function() {
        if (dropdownContent.style.display === 'block') {
            dropdownContent.style.display = 'none';
        } else {
            dropdownContent.style.display = 'block';
        }
    });

    // Close the dropdown when clicking outside of it
    document.addEventListener('click', function(event) {
      if (!dropdownButton.contains(event.target) && !dropdownContent.contains(event.target)) {
        dropdownContent.style.display = 'none';
      }
    });
});
</script>