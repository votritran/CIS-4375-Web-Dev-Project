<style>
.navbar ul li {
    position: relative; /* Add this line */
}

.account-dropdown .dropbnt {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
}

.account-icon-img {
    height: auto;
    width: 45px;
    position: absolute;
    top: -10px;
    transition: transform 0.3s, border-color 0.3s;
}

.account-dropdown .dropdown-content {
    display: none; /* Initially hidden */
    position: absolute;
    background-color: #f9f9f9;
    min-width: 130px;
    box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    right: -40px;
    top: 35px;
    text-align: center;
}

.account-dropdown .dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.account-dropdown .dropdown-content a:hover {
    background-color: #f1f1f1;
}

@media (max-width: 900px) {

    
    /* Optional: Adjust button style for smaller screens */
    button {
        width: auto; /* Allow button to be smaller */
        padding: 10px 20px;
    }

    .navbar .account-icon-img {
        height: auto;
        width: 45px;
        position: absolute;
        top: -10px;
        left: 50%; /* This moves the left edge of the icon to the center of its parent */
        transform: translateX(-50%); /* This shifts the icon back by half its width, truly centering it */
        transition: transform 0.3s, border-color 0.3s;
    }

    .navbar .account-dropdown .dropdown-content {
        display: none; /* Initially hidden */
        position: absolute;
        background-color: #f9f9f9;
        min-width: 130px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
        top: 30px;
        right: 50%;
    }
    
    .account-dropdown .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }
}

</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const dropdownButton = document.getElementById('accountDropdownButton');
    const dropdownContent = document.getElementById('accountDropdownContent');

    dropdownButton.addEventListener('click', function() {
        if (dropdownContent.style.display === 'block') {
            dropdownContent.style.display = 'none';
        } else {
            dropdownContent.style.display = 'block';
        }
    });

    // Close the dropdown when clicking outside of it
    document.addEventListener('click', function(event) {
      if (!dropdownButton.contains(event.target) && !dropdownContent.contains(event.target)) {
        dropdownContent.style.display = 'none';
      }
    });
});
</script>