<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paris Sweet Patisserie - Menu</title>
    <link rel="stylesheet" href="../css/menustyles.css">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Navigation bar -->
    <%- include('../partials/loginnavbar') %>
        
    <!-- Main header -->
    <h1 class="header">Our Delicious Test Menu</h1>

    <!-- Menu Section -->
    <div id="menu">
        <% Object.keys(menuItems).forEach(function(category) { %>
            <div class="menu-container">
                <h2><%= category %></h2>
                <div class="menu-items">
                    <% menuItems[category].forEach(function(item) { %>
                        <div class="menu-item">
                            <h3><%= item.ProductName %></h3>
                            <img src="<%= item.ProductImage || '/photo/default-image.jpg' %>" alt="<%= item.ProductName %>" class="menu-image">
                            <p><strong>Description:</strong> <%= item.ProductDescription %></p>
                            <p><strong>Price:</strong> $<%= item.ProductPrice %></p>
                            <p><strong>Size:</strong> <%= item.ProductSize || 'N/A' %></p>

                            <!-- Edit Button -->
                            <button class="edit-button" onclick="editItem(<%= item.ProductID %>)">Edit</button>

                            <!-- Delete Button -->
                            <button class="delete-button" onclick="deleteItem(<%= item.ProductID %>)">Delete</button>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% }); %>
    </div>

    <script>
        function toggleDropdown() {
            var dropdown = document.querySelector('.account-dropdown');
            dropdown.classList.toggle('show');
        }

        window.onclick = function(event) {
            if (!event.target.matches('.account-icon') && !event.target.closest('.account-dropdown')) {
                var dropdowns = document.querySelectorAll('.dropdown-content');
                dropdowns.forEach(function(dropdown) {
                    dropdown.style.display = "none"; // Hide dropdown if clicked outside
                });
            }
        }

        // Optional: Hide dropdown initially on page load
        document.addEventListener('DOMContentLoaded', function() {
            var dropdowns = document.querySelectorAll('.dropdown-content');
            dropdowns.forEach(function(dropdown) {
                dropdown.style.display = "none"; // Initially hide the dropdown
            });
        });
    </script>

    <!-- Footer -->
    <%- include('../partials/footer') %>
</body>
</html>
